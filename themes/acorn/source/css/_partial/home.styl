.jumbotron
    height auto

// Video
.video
  position relative
  height auto

.video-media
  position relative
  z-index 0
  height 100vh
  overflow hidden
  video, img
    position absolute
    center()
    min-width 100%
    min-height 100%
  article
    position absolute
    top 0
    right 0
    bottom 0
    left 0
    background-color rgba(darken(primary-color, 85%), .85)
    .article-inset
      position absolute
      center()
      display block
      color light-color
      text-align center
      font-size large
      
.video-frame
  position absolute
  z-index 1
  right 0
  bottom 0
  left 0
  min-width 100%
  img
    display block
    width 100%
    transform scale(2)
    transform-origin top center;

@keyframes twinkling
  0%
    opacity .25
  50%
    opacity 1
  100%
    opacity .25

.video-learn-more
  position: absolute
  z-index: 2
  bottom: spacer
  center-x()
  animation: twinkling 3s linear infinite
  a
    display: inline-block
    color: light-color
    transition: transition-base
    &:hover
      color: white

// Hero
.hero
  background-color: white

@keyframes fly
  0%
    transform: translateY(0)
  50%
    transform: translateY(5%)
  100%
    transform: translateY(0)

.player
  position: relative
  .player_1,.player_2
    position: absolute
    width: 16rem
  .player_1
    bottom: 0
    left: -10%
    animation: fly 5s ease-in-out infinite
  .player_2
    right: -10%
    top: 0
    animation: fly 5s linear infinite
